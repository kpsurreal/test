#开发源代码分支
 /develop

#表结构变更
ALTER TABLE `gmf_bms`.`product_oms` ADD `loan_capital` DECIMAL(16,3)  NOT NULL  AFTER `collect_capital`;
ALTER TABLE `gmf_bms`.`product_oms` ADD `assure_capital` DECIMAL(16,3)  NOT NULL  AFTER `loan_capital`;
ALTER TABLE `gmf_bms`.`product_oms` ADD `lever_ratio` DECIMAL(6,2)  NOT NULL  AFTER `assure_capital`;
ALTER TABLE `gmf_bms`.`product_base` CHANGE `id` `id` INT(11)  NOT NULL  AUTO_INCREMENT;
ALTER TABLE `gmf_bms`.`product_base` ADD `ctp_id` TINYINT(4)  NOT NULL;

ALTER TABLE `oms_v3`.`portfolio_fund_adjustment` ADD `right_amount` DECIMAL(18,5)  NOT NULL  COMMENT '权益资金'  AFTER `amount`;
ALTER TABLE `oms_v3`.`portfolio_fund_adjustment` ADD `loan_amount` DECIMAL(18,5)  NOT NULL  COMMENT '借款资金'  AFTER `right_amount`;

ALTER TABLE `risk_management`.`stock_pools` ADD `org_id` INT  NOT NULL  AFTER `user_id`;

ALTER TABLE `oms_v3`.`workflow_entrust` ADD `is_locked` TINYINT(4)  NOT NULL  COMMENT '是否成交录入锁定';
ALTER TABLE `gmf_bms`.`pb_account_info` CHANGE `sec_qry_type` `sec_qry_type` VARCHAR( 8 ) CHARACTER SET utf8 COLLATE utf8_general_ci NOT NULL DEFAULT '0' COMMENT '券商查询 类型';

CREATE TABLE `gmf_bms`.`user_login_log` (
`id`  int(11) NOT NULL AUTO_INCREMENT ,
`user_id`  int(11) NOT NULL COMMENT '用户ＩＤ' ,
`ip`  varchar(20) CHARACTER SET utf8 COLLATE utf8_general_ci NOT NULL DEFAULT '' ,
`is_login`  tinyint(4) NOT NULL DEFAULT 0 COMMENT '0表示未登入，1表示登入' ,
`desc`  varchar(128) CHARACTER SET utf8 COLLATE utf8_general_ci NULL DEFAULT NULL ,
`created_at`  timestamp NOT NULL DEFAULT '0000-00-00 00:00:00' ,
`updated_at`  timestamp NOT NULL DEFAULT '0000-00-00 00:00:00' ,
PRIMARY KEY (`id`),
INDEX `i_user_login` (`user_id`, `created_at`) USING BTREE 
)
ENGINE=InnoDB
DEFAULT CHARACTER SET=utf8 COLLATE=utf8_general_ci
AUTO_INCREMENT=1
ROW_FORMAT=COMPACT;

CREATE TABLE `gmf_bms`.`user_safe_state` (
`id`  bigint(20) NOT NULL AUTO_INCREMENT ,
`user_id`  int(11) NOT NULL COMMENT '用户ＩＤ' ,
`safe_state`  tinyint(3) UNSIGNED NOT NULL COMMENT '暂时只存入锁定，不存入需要重设密码的状态' ,
`status`  tinyint(3) UNSIGNED NOT NULL DEFAULT 1 COMMENT '0失效，1有效' ,
`state_time`  int(10) UNSIGNED NOT NULL ,
`state_need_time`  int(10) UNSIGNED NOT NULL ,
`desc`  varchar(128) CHARACTER SET utf8 COLLATE utf8_general_ci NOT NULL COMMENT '状态描述字段' ,
`created_at`  timestamp NOT NULL DEFAULT '0000-00-00 00:00:00' ,
`updated_at`  timestamp NOT NULL DEFAULT '0000-00-00 00:00:00' ,
PRIMARY KEY (`id`),
INDEX `i_user_login` (`user_id`, `safe_state`) USING BTREE 
)
ENGINE=InnoDB
DEFAULT CHARACTER SET=utf8 COLLATE=utf8_general_ci
AUTO_INCREMENT=1
ROW_FORMAT=COMPACT;

